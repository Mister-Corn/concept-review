{
  "name": "modern-react",
  "version": "1.0.0",
  "description": "This is a workshop repo to teach you about using all the goodies we got from React 16.7.0!",
  "keywords": [],
  "homepage": "http://modern-react.netlify.com/",
  "main": "src/index.js",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "jest-dom": "^2.1.1",
    "react": "16.7.0-alpha.2",
    "react-cache": "2.0.0-alpha.1",
    "react-dom": "16.7.0-alpha.2",
    "react-error-boundary": "^1.2.3",
    "react-testing-library": "^5.3.0",
    "vanilla-tilt": "^1.5.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^5.4.1",
    "cross-spawn": "^6.0.5",
    "husky": "^1.2.0",
    "inquirer": "^6.2.0",
    "is-ci": "^1.2.1",
    "node": "^8.11.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "react-scripts": "^2.1.3",
    "replace-in-file": "^3.4.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --coverage",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "format": "prettier --write \"**/*.+(js|json)\"",
    "setup": "node ./scripts/verify && node ./scripts/install && npm run validate && node ./scripts/autofill-feedback-email.js",
    "validate": "npm-run-all --parallel build test:coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
